@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
    <a class="@ManageNavPages.IndexNavClass(ViewContext) nav-link" asp-page="./Index">Profile</a>
    <a class="@ManageNavPages.ChangePasswordNavClass(ViewContext) nav-link" asp-page="./ChangePassword">Password</a>
    @if (hasExternalLogins)
    {
        <a class="@ManageNavPages.ExternalLoginsNavClass(ViewContext) nav-link" asp-page="./ExternalLogins">External logins</a>
    }
    @*<li class="@ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)"><a asp-page="./TwoFactorAuthentication">Two-factor authentication</a></li>*@
</div>

