@page
@model CreateModel
@{
}


<br />
<h2>Create Category Type</h2>
<hr />

<form method="post">
    <div class="form-border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="form-group row">
            <div class="col-sm-2">
                <label asp-for="Restaurants.Name" class="custom-label"></label>
            </div>
            <div class="col-sm-4">
                <input asp-for="Restaurants.Name" class="form-control" />
            </div>
            <span asp-validation-for="Restaurants.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-sm-2">
                <label asp-for="Restaurants.DisplayOrder" class="custom-label"></label>
            </div>
            <div class="col-sm-4">
                <input asp-for="Restaurants.DisplayOrder" class="form-control" />
            </div>
            <span asp-validation-for="Restaurants.DisplayOrder" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-sm btn-primary" />
            <a asp-page="Index" class="btn btn-sm btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{ 
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}