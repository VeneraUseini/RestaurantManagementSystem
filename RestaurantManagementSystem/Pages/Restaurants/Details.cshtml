@page
@model RestaurantManagementSystem.Pages.Restaurants.DetailsModel
@{
    ViewData["Title"] = "Details";
}


<br />
<h2>Restaurant Details</h2>
<hr />

    <div class="form-border">
        <fieldset disabled>
            <div class="form-group row">
                <div class="col-sm-2">
                    <label asp-for="Restaurant.Name" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Restaurant.Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                    <label asp-for="Restaurant.DisplayOrder" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Restaurant.DisplayOrder" class="form-control" />
                </div>
            </div>
        </fieldset>
        <br />
        <div class="form-group">
            <a asp-page="Edit" asp-route-id="@Model.Restaurant.Id" class="btn btn-sm btn-primary">Edit</a>
            <a asp-page="Index" class="btn btn-sm btn-success">Back to List</a>
        </div>
    </div>
